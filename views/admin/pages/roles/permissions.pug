extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  .col.py-3
    +alert-success(3000)
    +alert-error(3000)
    
    h1.mb-4 Phân quyền 

    if(roles)
      div(class="d-flex flex-row-reverse")
        button(
          type="submit"
          class="btn btn-warning mb-3 me-4"
          button-submit='/admin/roles/permissions'
        ) 
          i.fa.fa-check 
            span Cập nhật

      table(
        class="table table-hover table-sm"
        table-permissions
      )
        thead
          tr
            th Tính năng
            each item in roles
              th(
                class="text-center"
                role-id=item.id
              ) #{item.title}
        tbody
          tr
            td(colspan="4")
              b Manage Books
          tr
            td Xem
            each item in roles
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id 
                  data-name="books_view"
                  checked=(item.permissions.includes("books_view") ? true : false)
                )
          tr
            td Thêm mới
            each item in roles
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  data-name="books_create"
                  checked=(item.permissions.includes("books_create") ? true : false)
                )
          tr
            td Chỉnh sửa
