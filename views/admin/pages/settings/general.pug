extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/box-actions.pug
include ../../mixins/alert.pug

block main
  .col.py-3
    +alert-success(3000)
    +alert-error(3000)

    h1.mb-4 Cài đặt chung 

    form(
      action=`/admin/settings/general?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="websiteName" class="mb-2") Tên website
        input(
          type="text"
          class="form-control mb-3"
          id="websiteName"
          name="websiteName"
          value=(setting ? setting.websiteName : "")
        )
      div(
        class="form-group"
        upload-image
      )
        label(for="logo" class="d-block mb-2") Logo
        input(
          type="file"
          class="form-control-file mb-3 d-block" 
          id="logo"
          name="logo"
          accept="image/*"
          upload-image-input
        )
        img(
          src=(setting ? setting.logo : "")
          class="image-preview"
          upload-image-preview
        )
      div(class="form-group")
        label(for="phone" class="mb-2 d-block") Chọn màu 
        input(type='color' class="mb-3" name="color" value=(setting ? setting.color : ""))
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-success"
        ) Cập nhật
      