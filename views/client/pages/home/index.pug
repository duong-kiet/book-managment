extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3 
    .row 
      .col-12 
        +box-head("Phổ biến")

    .row 
      each book in books 
        .col-4.mb-3 
            a(href=`/books/detail/${book.slug}`)
              .book-item 
                .inner-image 
                  img(src=book.thumbnail,alt=book.title)
                .inner-content        
                  h3.inner-title #{book.title}
                  .inner-price #{book.price} đồng 

