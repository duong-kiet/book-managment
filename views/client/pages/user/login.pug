extends ../../layouts/default-user.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  .container.my-5
    .row
      .col-6.mx-auto
        .d-flex.justify-content-between
          +box-head(pageTitle)
          div 
            +alert-success(3000)
            +alert-error(3000)
        form(
          action="/user/login"
          method="POST"
        )
          div(class="form-group")
            label(for="email" class="mb-2") Email
            input(
              type="email"
              class="form-control mb-2"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password" class="mb-2") Mật khẩu
            input(
              type="password"
              class="form-control mb-2"
              id="password"
              name="password"
              required
            )
          .mt-5.d-flex.justify-content-between.align-items-center
            a(href="/user/password/forgot") Quên mật khẩu 
            div(class="form-group text-end")
              button(
                type="submit"
                class="btn btn-success btn-block"
              ) Đăng nhập 

          p.text-muted.text-center.mt-3 Chưa có tài khoản ? 
            a(href="/user/register")
              b Đăng ký ngay 
