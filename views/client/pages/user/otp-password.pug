extends ../../layouts/default-user.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  .container.my-5
    .row
      .col-6.mx-auto
        .d-flex.justify-content-between
          +box-head(pageTitle)
          div 
            +alert-success(3000)
            +alert-error(3000)
        form(
          action="/user/password/otp"
          method="POST"
        )
          div(class="form-group")
            label(for="email" class="mb-2") Email
            input(
              type="email"
              class="form-control mb-2"
              id="email"
              name="email"
              required
              readonly 
              value=email
            )
          div(class="form-group")
            label(for="otp" class="mb-2") Mã OTP 
            input(
              type="text"
              class="form-control mb-2"
              id="otp"
              name="otp"
              required
            )
          .mt-3.d-flex.flex-row-reverse
            div(class="form-group text-end")
              button(
                type="submit"
                class="btn btn-success btn-block"
              ) Xác thực 